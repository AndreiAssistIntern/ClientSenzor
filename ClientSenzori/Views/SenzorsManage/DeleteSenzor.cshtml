@model IEnumerable < ClientSenzori.ModelView.DeleteSenzor>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowSenzor</title>
</head>
<body>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Senzor Name")
            </th>
            <th>
                @Html.DisplayName("First Name")
            </th>
            <th>
                @Html.DisplayName("Last Name")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Senzor records")
            </th>
            <th>
                @Html.DisplayName("Action")
            </th>
           

            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.SenzorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountRecords)
                </td>
                <td>
                    @item
                    @using (Html.BeginForm())
                {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="row">
                                <div class="col-md-1">
                                    @Html.HiddenFor(model => item.Email, new { @Value = item.Email, id = item + "Email" })
                                    @Html.ValidationMessageFor(model => item.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-1">
                                    @Html.TextBoxFor(model => item.SenzorName, new { @Value = item.SenzorName, id = item + "Senzor" })
                                    @Html.ValidationMessageFor(model => item.SenzorName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Delete Senzor" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }
                </td>
               

            </tr>
        }

    </table>
</body>
</html>
